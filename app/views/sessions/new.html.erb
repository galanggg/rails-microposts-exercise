<div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2 mt-10">
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-full">
  <h1 class="mb-8 text-3xl text-center">Sign In</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div class="mb-4">
    <%= f.label :Email, class: "block text-grey-darker text-sm font-bold mb-2" %>
    <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker", placeholder: 'email@example.com' %>
  </div>
  <div class="mb-6">
    <%= f.label :Password, class: "block text-grey-darker text-sm font-bold mb-2" %>
    <%= f.password_field :password, class: "shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3", placeholder: '******************' %>
  </div>
  <div class="flex items-center justify-between">
    <%= f.submit "Sign In", class: "bg-black hover:bg-blue-dark text-white font-bold py-2 px-4 rounded" %>
    <a class="inline-block align-baseline font-bold text-sm text-blue hover:text-blue-darker" href="#">
      Forgot Password?
    </a>
  </div>
  <% end %>
</div>
</div>