<div class="bg-grey-lighter min-h-screen flex flex-col mx-auto">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <%= render 'shared/error_message' %>
      <h1 class="mb-8 text-3xl text-center">Sign up</h1>
      <%= form_with(model: @user, local: true) do |u| %>
        <%= u.text_field :name, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: 'Full Name' %>
        <%= u.email_field :email, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: 'Email' %>
        <%= u.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: 'Password' %>
        <%= u.password_field :password_confirmation, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: 'Password Confirmation' %>
        <%= u.submit 'Create My Account', class: "w-full text-center py-3 rounded bg-green text-black hover:bg-green-dark focus:outline-none my-1 cursor-pointer" %>
          <div class="text-center text-sm text-grey-dark mt-4">
              By signing up, you agree to the
              <a class="no-underline border-b border-grey-dark text-grey-dark" href="#">
                  Terms of Service
              </a> and
              <a class="no-underline border-b border-grey-dark text-grey-dark" href="#">
                  Privacy Policy
              </a>
          </div>
      </div>
      <% end %>
      <div class="text-grey-dark mt-6">
          Already have an account?
          <a class="no-underline border-b border-blue text-blue" href="../login/">
              Log in
          </a>.
        </div>
      </div>
  </div>
